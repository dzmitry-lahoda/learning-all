<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Itransition.Training.Data.Article, Itransition.Training.Data" table="articles" optimistic-lock="version" >
		<id name="Id" column="id" type="int">
			<generator class="increment" />
		</id>
		<version name="Version" column="version" type="long"/>
		<property name="Athour" column="athour" type="String" index="article_athour" />
		<property name="Title" column="title" type="String" index="article_title" />
		<property name="Body" column="body" type="String" />
		<property name="LastUpdate" column="lastupdate" type="datetime" />
		<bag name="Tags" table="articles_tags" inverse="false" cascade="save-update" lazy="false">
			<key column="Article_Id" />
			<many-to-many class="Itransition.Training.Data.Tag, Itransition.Training.Data" column="tag_id" />
		</bag>
	</class>
</hibernate-mapping>